<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_fork_contact_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/contact_quantity_edtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calllog_quantity_hint"
            android:inputType="numberSigned"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/start_fork_contact_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_fork_contact"/>


</LinearLayout>